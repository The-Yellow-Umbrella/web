---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
import { InteractiveRain } from "../components/Rain.jsx";
import { fade } from 'astro:transitions';


---

<!doctype html>
<html lang="en" transition:animate={fade({ duration: '0.5s' })}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="no-scroll">
		<slot />
		<InteractiveRain client:only="react"></InteractiveRain>
	</body>
</html>
<style is:global>

	@font-face {
 		font-family: 'Monaspace';
 		src: url('/fonts/MonaspaceArgon-Regular.woff') format('woff');
 		font-weight: normal;
 		font-style: normal;
	}
	@font-face {
 		font-family: 'Monaspace';
 		src: url('/fonts/MonaspaceArgon-Bold.woff') format('woff');
 		font-weight: bold;
 		font-style: normal;
	}
	@font-face {
 		font-family: 'Monaspace';
 		src: url('/fonts/MonaspaceArgon-Italic.woff') format('woff');
 		font-weight: normal;
 		font-style: italic;
	}	
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		background: #13151a;
	}
	.no-scroll::-webkit-scrollbar {
	  display: none;
	}

	/* Hide scrollbar for IE, Edge and Firefox */
	.no-scroll {
	  -ms-overflow-style: none;  /* IE and Edge */
	  scrollbar-width: none;  /* Firefox */
	}

</style>
